<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field='res' type='ru.otus.gwt.client.text.ApplicationConstants'/>
    <ui:style>
        .redButton {
            font-size: 10px;
        }
    </ui:style>
    <g:VerticalPanel>
        <g:HorizontalPanel>
            <g:Label text="{res.login_label_alt}"></g:Label>
            <g:TextBox ui:field="loginTextField"></g:TextBox>
        </g:HorizontalPanel>
        <g:HorizontalPanel>
            <g:Label text="{res.password_label_alt}"></g:Label>
            <g:PasswordTextBox ui:field="passwordTextField"></g:PasswordTextBox>
        </g:HorizontalPanel>
        <g:HorizontalPanel>
            <g:Button text="{res.logon_button_alt}" ui:field="submit" addStyleNames="{style.redButton}"></g:Button>
        </g:HorizontalPanel>
    </g:VerticalPanel>
</ui:UiBinder>