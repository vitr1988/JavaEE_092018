<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='resources' type='ru.otus.gwt.client.text.ApplicationConstants'/>
	<ui:style>
		.contactsViewButtonHPanel {
		 margin: 5px 0px 0px 5px;
		}
	  .contactsViewContactsFlexTable {
	   margin: 5px 0px 5px 0px; 
	  }
	</ui:style>

  <g:DecoratorPanel width="100%" >
	  <g:VerticalPanel>
	    <g:HorizontalPanel addStyleNames="{style.contactsViewButtonHPanel}">
	      <g:Button ui:field="addButton"><ui:text from="{resources.add_button_alt}" /> </g:Button>
	      <g:Button ui:field="deleteButton"><ui:text from="{resources.delete_button_alt}" /></g:Button>
	    </g:HorizontalPanel>
		<g:FlexTable ui:field="contactsTable" addStyleNames="{style.contactsViewContactsFlexTable}"/>
	  </g:VerticalPanel>
  </g:DecoratorPanel>
</ui:UiBinder> 