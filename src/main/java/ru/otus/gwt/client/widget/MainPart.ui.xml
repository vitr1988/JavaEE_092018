<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:elem='urn:import:com.google.gwt.dom.client'>
    <ui:with field='res' type='ru.otus.gwt.client.text.ApplicationConstants'/>
    <ui:style>
        .redButton {
            font-size: 10px;
        }
        .marginTop5px {
            margin-top: 5px;
        }
    </ui:style>
    <g:VerticalPanel>
        <g:HorizontalPanel ui:field="loginPanel" addStyleNames="{style.marginTop5px}">
            <g:Label text="{res.login_label_alt}" addStyleNames="firstColumnWidth"></g:Label>
            <g:TextBox ui:field="loginTextField" addStyleNames="inputWidth"></g:TextBox>
        </g:HorizontalPanel>
        <g:HorizontalPanel ui:field="passwordPanel" addStyleNames="{style.marginTop5px}">
            <g:Label text="{res.password_label_alt}" addStyleNames="firstColumnWidth"></g:Label>
            <g:PasswordTextBox ui:field="passwordTextField" addStyleNames="inputWidth"></g:PasswordTextBox>
        </g:HorizontalPanel>
        <g:HorizontalPanel addStyleNames="{style.marginTop5px}" horizontalAlignment="ALIGN_CENTER" width="100%">
            <g:Button text="{res.logon_button_alt}" ui:field="submit" addStyleNames="{style.redButton} submitArea"></g:Button>
        </g:HorizontalPanel>
    </g:VerticalPanel>
</ui:UiBinder>